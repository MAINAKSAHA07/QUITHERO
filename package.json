{
  "name": "quit-hero",
  "version": "1.0.0",
  "description": "Quit Hero - Addiction Recovery App",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "echo 'Build completed successfully'",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "pb:start": "docker-compose up -d",
    "pb:stop": "docker-compose down",
    "pb:logs": "docker-compose logs -f pocketbase",
    "pb:restart": "docker-compose restart pocketbase",
    "pb:complete-setup": "node PocketBase/complete-setup.js",
    "pb:setup": "node PocketBase/setup-pocketbase.js",
    "pb:rules": "node PocketBase/set-rules.js",
    "pb:fix-sessions": "node PocketBase/fix-user-sessions.js",
    "pb:fix-cravings": "node PocketBase/fix-cravings-collection.js",
    "pb:seed-program": "node PocketBase/seed-full-program.js",
    "pb:seed-sample": "node PocketBase/seed-sample.js",
    "dev:backoffice": "cd backoffice && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backoffice\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-table": "^8.21.3",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^10.16.16",
    "google-translate": "^3.0.0",
    "lucide-react": "^0.294.0",
    "pocketbase": "^0.26.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.68.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.15.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
